{
    "domain_key": "edge",
    "zone_key": "{{ .Values.global.zone}}",
    "name": "*",
    "port": 10808,
    "redirects": null,
    "gzip_enabled": false,
    "cors_config": null,
    "aliases": null{{ if .Values.services.edge.secret }},
    "force_https": true,
    "ssl_config": {
        "protocols": ["SSLv3", "SSLv2", "TLSv1", "TLSv1.1", "TLSv1.2"],
        "require_client_certs": true,
        "trust_file": "{{ .Values.services.edge.secret.mount_point }}/ca.crt",
        "cert_key_pairs": [
            {
                "certificate_path": "{{ .Values.services.edge.secret.mount_point }}/server.crt",
                "key_path": "{{ .Values.services.edge.secret.mount_point }}/server.key"
            }
        ]
    }
   {{- end }}
}